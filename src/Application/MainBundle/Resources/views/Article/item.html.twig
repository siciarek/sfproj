{% extends '::base.html.twig' %}

{% block content %}

    {% set authors = [] %}

    {% for a in item.authors %}
        {% set authors = authors|merge([ a.firstName~' '~a.lastName ]) %}
    {% endfor %}

    <h1 class="page-header">
        <i class="fa fa-copy text-muted"></i>
        {{ item.translate(app.request.locale).title }}

        <a class="btn btn-warning pull-right" onclick="history.back()">
            <i class="fa fa-arrow-circle-left fa-lg"></i>
        </a>
    </h1>

    <div class="alert alert-info">
        <i class="fa fa-edit fa-lg"></i>
        {{ authors|join(', ') }}
    </div>

    <pre style="white-space: pre-wrap">{{ item.translate(app.request.locale).content }}</pre>
{% endblock %}
